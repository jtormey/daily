<h1>Show Goal</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @goal.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @goal.description %>
  </li>

  <li>
    <strong>Period:</strong>
    <%= @goal.period %>
  </li>

  <li>
    <strong>Streak:</strong>
    <%= @goal.streak %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.goal_path(@conn, :edit, @goal) %></span>
<span><%= link "Back", to: Routes.goal_path(@conn, :index) %></span>
